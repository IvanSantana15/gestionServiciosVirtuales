@model gestionServiciosVirtuales.Models.TipoServicio

@{
    ViewData["Title"] = "Create";
}

<h3>Crear un nuevo servicio</h3>


<hr />
<div class="row d-flex justify-content-center align-content-center">
    <div class="col-md-4">
        <form asp-action="Create"class="border-bottom shadow-sm rounded-3 p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="servicioNombre" class="control-label">Servicio</label>
                <input asp-for="servicioNombre" class="form-control" />
                <span asp-validation-for="servicioNombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="descripcion" class="control-label">Descripcion</label>
                <textarea asp-for="descripcion" class="form-control"></textarea>
                <span asp-validation-for="servicioNombre" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver atras</a>
</div>

