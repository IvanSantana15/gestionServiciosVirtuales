@model gestionServiciosVirtuales.Models.Servicio

@{
    ViewData["Title"] = "Eliminar";
}


<h3>Esta seguro que desea eliminarlo?</h3>
<div>
    <h4>Servicio</h4>
    <hr />
    <div class="row d-flex justify-content-center align-content-center">
    <dl class="row border-bottom shadow p-4 w-50">
        <dt class = "col-sm-2">
         Servicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServicioTitulo)
        </dd>
        <dt class = "col-sm-2">
            Descripcion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServicioDescripcion)
        </dd>
        <dt class = "col-sm-2">
            Fecha Creacion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServicioFechaCreacion)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
         <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServicioEstadoNavigation.ServicioEstadoDescripcion)
        </dd>

       
    </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ServicioId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volve a la lista</a>
    </form>
</div>
