@model gestionServiciosVirtuales.Models.Servicio

@{
    ViewData["Title"] = "Editar";
}


<h4> Editar Servicio</h4>
<hr />
<div class="row  d-flex justify-content-center align-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" class="border p-3 shadow-sm ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServicioId" />
            <div class="form-group ">
                <label asp-for="ServicioTitulo" class="control-label">Servicio</label>
                <input asp-for="ServicioTitulo" readonly class="form-control" />
                <span asp-validation-for="ServicioTitulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServicioDescripcion" class="control-label">Descripcion</label>
                <textarea asp-for="ServicioDescripcion" class="form-control"></textarea>
                <span asp-validation-for="ServicioDescripcion" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="ServicioEstado" class="control-label">Estado</label>
                <select asp-for="ServicioEstado" class="form-control" asp-items="ViewBag.ServicioEstado"></select>
                <span asp-validation-for="ServicioEstado" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="ServicioFechaCreacion" class="control-label">FechaCreacion</label>
                <input asp-for="ServicioFechaCreacion" class="form-control" />
                <span asp-validation-for="ServicioFechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="UsuarioId" class="control-label">Usuario</label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
